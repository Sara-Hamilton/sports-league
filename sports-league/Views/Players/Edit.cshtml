@model SportsLeague.Models.Player

@{
    ViewData["Title"] = "Player - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<hr />
<h4>Edit this Player :@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PlayerId)

    @Html.LabelFor(model => model.FirstName)
    @Html.EditorFor(model => model.FirstName)

    @Html.LabelFor(model => model.LastName)
    @Html.EditorFor(model => model.LastName)

    @Html.LabelFor(model => model.TeamId)
    @Html.DropDownList("TeamId")

    <input type="submit" value="Save" class="btn btn-default" />

}

@Html.ActionLink("Back to Players", "Index")
