@model SportsLeague.Models.Division

@{
    ViewData["Title"] = "Division - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<hr />
<h4>Edit this Division :@Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DivisionId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    @Html.LabelFor(model => model.Skill)
    @Html.EditorFor(model => model.Skill)

    @Html.LabelFor(model => model.MaxTeams)
    @Html.EditorFor(model => model.MaxTeams)

    <input type="submit" value="Save" class="btn btn-default" />

}

@Html.ActionLink("Back to Divisions", "Index")
